<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/c_image"
                android:src="@mipmap/ch" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Connecting-4"
                    android:id="@+id/c_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Literature"
                    android:id="@+id/c_catagory"
                    android:textColor="@color/back"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:id="@+id/c_collage"
                    android:text="GGITS"
                    android:textColor="@color/back2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/l1"
            android:layout_margin="5dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c_rating"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corne"
                android:drawableRight="@drawable/black_star_dp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="12dp"
                android:text="4.5"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_corne"
                android:drawableLeft="@drawable/student"
                android:gravity="center"
                android:id="@+id/c_members"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_black"
                android:padding="5dp"
                android:textColor="#000"
                android:text="50 member" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/round_corne"
                android:text="Get Details"
                android:textSize="12dp"
                android:id="@+id/btn_get_details"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>